{
  "name": "pixeltron-server",
  "version": "1.0.0",
  "description": "A reasonably generic game server for socket.io clients, with configurable protocol",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/pixeltron-server.js",
  "types": "lib/pixeltron-server.d.ts",
  "type": "commonjs",
  "scripts": {
    "format": "prettier --config src/config/.prettierrc.js --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint -c src/config/.eslintrc.js --ignore-path src/config/.eslintignore src --ext .ts --fix",
    "test": "jest --config src/config/jestconfig.json",
    "build": "tsc",
    "dev": "tsc-watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paradroid001/pixeltron-server.git"
  },
  "keywords": [],
  "author": "Brad Power",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/paradroid001/pixeltron-server/issues"
  },
  "homepage": "https://github.com/paradroid001/pixeltron-server#readme",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/jquery": "^3.5.1",
    "@types/node": "^14.10.1",
    "@types/shelljs": "^0.8.8",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "jest-html-reporter": "^3.2.0",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/socket.io": "^2.1.11",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "pm2": "^4.4.1",
    "pm2-server-monitor": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0",
    "sqlite3": "^5.0.0",
    "typeorm": "^0.2.26",
    "winston": "^3.3.3"
  }
}
