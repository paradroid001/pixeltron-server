{
  "name": "pixeltron-server",
  "version": "1.0.0",
  "description": "A reasonably generic game server for socket.io clients, with configurable protocol",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/pixeltron-server.js",
  "types": "lib/pixeltron-server.d.ts",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf lib/*",
    "format": "prettier --config src/config/.prettierrc.js --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint -c src/config/.eslintrc.js --ignore-path src/config/.eslintignore src --ext .ts --fix",
    "test": "jest --config src/config/jestconfig.json --runInBand",
    "test-full": "jest --config src/config/jestconfig.json --coverage --verbose --coverageDirectory='../../lib/tests'",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "npm run doc",
    "predev": "npm run clean",
    "dev": "tsc-watch",
    "doc": "npx typedoc --options src/config/typedoc.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paradroid001/pixeltron-server.git"
  },
  "keywords": [],
  "author": "Brad Power",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/paradroid001/pixeltron-server/issues"
  },
  "homepage": "https://github.com/paradroid001/pixeltron-server#readme",
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/jquery": "^3.5.16",
    "@types/node": "^18.11.18",
    "@types/shelljs": "^0.8.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "jest-html-reporter": "^3.7.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/socket.io": "^3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "pm2": "^5.2.2",
    "pm2-server-monitor": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.5.4",
    "sqlite3": "^5.1.4",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  }
}
