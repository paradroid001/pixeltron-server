{
    "verbose": true,
    "roots": [".."],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "reporters": [
      "default",
      [
        "../../node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "lib/tests/index.html"
        }
      ]
    ]
  }